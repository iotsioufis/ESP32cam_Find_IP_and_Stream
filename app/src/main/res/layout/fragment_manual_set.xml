<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.manual_set.ManualSetFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_manual_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="Enter the IP address of the ESP32 camera : "
            android:textAlignment="center"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextIPs"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="73dp"
            android:background="#37858181"
            android:clickable="true"
            android:cursorVisible="true"
            android:hint="Example:\n192.###.###.###"
            android:inputType="phone"
            android:paddingStart="5dp"
            android:paddingEnd="15dp"
            android:textColorHint="#7A7C83"
            android:textCursorDrawable="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_manual_set" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save_ip"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save IP \naddress"
            android:textAllCaps="false"
            app:backgroundTint="@color/purple_500"
            app:icon="@drawable/ic_diskette"
            app:iconGravity="textStart"
            app:iconSize="28dp"
            app:iconTint="#dff8f7f5"
            app:layout_constraintBottom_toBottomOf="@+id/editTextIPs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editTextIPs"
            app:layout_constraintTop_toTopOf="@+id/editTextIPs"
            app:shapeAppearanceOverlay="@style/General.Button" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="15dp"
            android:background="?android:attr/listDivider"
            android:scaleX="0.9"
            app:layout_constraintBottom_toTopOf="@+id/text_saved_ips_manual"
            tools:layout_editor_absoluteX="1dp" />

        <TextView
            android:id="@+id/text_saved_ips_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="Saved IP addresses : \n"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextIPs" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_manual"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="@+id/editTextIPs"
            app:layout_constraintTop_toBottomOf="@+id/text_saved_ips_manual" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>